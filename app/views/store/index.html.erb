<h1>Catalogo de Produtos</h1>

<% @products.each do |product| %>
    <div class="entry">
      <h3><%= product.title %></h3>
      <%= sanitize product.description %>
      <div class="price_line">
        <span class="price">
          <%= number_to_currency product.price %>
        </span>
      </div>
    </div>
<% end %>